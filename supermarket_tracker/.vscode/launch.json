{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Update MBugdet prices",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--download_prices",
        "--take_screenshots"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Collect MBugdet products",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--collect_products",
        "--take_screenshots"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Create MBudget reference json",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--create_reference_json"
      ],
      "console": "integratedTerminal"
    }
  ]
}
