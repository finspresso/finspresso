{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Update MBugdet prices",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--download_prices",
        "--take_screenshots"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Collect MBugdet products",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--collect_products",
        "--take_screenshots"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Collect MBugdet products (Express)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--collect_products"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Create MBudget reference json",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--create_reference_json"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Update MBudget reference json",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--update_reference_json",
        "data/mbudget/20230518_135021/mbudget_prices.xlsx"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Update MBudget reference json (latest)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--update_reference_json",
        "latest"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Update metadata table",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--credentials_file",
        "credentials/sql_credentials.json",
        "--update_metadata_table"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Update prices table",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--credentials_file",
        "credentials/sql_credentials.json",
        "--update_prices_table"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Print prices table",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/supermarket_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--name",
        "mbudget",
        "--credentials_file",
        "credentials/sql_credentials.json",
        "--print_prices_table"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Update all mbudget",
      "type": "bashdb",
      "request": "launch",
      "program": "${workspaceRoot}/update_all.sh",
      "cwd": "${workspaceRoot}",
      "args": [
        "mbudget"
      ]
    }
  ]
}
