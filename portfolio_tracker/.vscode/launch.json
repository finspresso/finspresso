{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run test holdings",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/portfolio_tracker.py",
      "cwd": "${workspaceRoot}",
      "args": [
        "--holdings_file",
        "holdings_one.json"
      ],
      "console": "integratedTerminal",
      "env": {
        "QT_QPA_PLATFORM": "xcb"
